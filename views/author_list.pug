extends layout

block content
  h1= title

  if author_list.length
    ul
      each author in author_list
        li
          if author.date_of_birth && author.date_of_death 
            a(href=author.url) #{author.name}
            |  (#{author.date_of_birth_formatted} - #{author.date_of_death_formatted})
          else if !author.date_of_death && !author.date_of_birth 
            a(href=author.url) #{author.name}
            |  (NDA)
          else 
            a(href=author.url) #{author.name}
            |  (#{author.date_of_birth_formatted})
  else
    p There are no authors.
